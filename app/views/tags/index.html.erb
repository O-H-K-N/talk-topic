<div class="container">
  <div class="text-center">
    <h1 class="mt-5 mb-3"><%= t'.title' %></h1>
    <%= link_to t('.to_new_tag'), new_tag_path, class: 'btn btn-warning font-weight-bold text-light mb-3' %>
  </div>
  <div class="row">
    <div class="col-12">
      <% if @tags.present? %>
        <table class="table text-center">
          <thead>
            <tr>
              <th style="width: 25%"><%= t('defaults.tag') %></th>
              <th style="width: 25%"><%= t('defaults.delete') %></th>
            </tr>
          </thead>
          <%= render @tags %>
        </table>
      <% else %>
        <div class="text-center">
          <p class="font-weight-bold my-2"><%= t('.not_tag') %></p>
          <br>
          <%= image_tag 'message_onegaishimasu.png' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
