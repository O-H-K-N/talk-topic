<div class="container">
  <div class="m-auto" style="width: 600px">
    <h1 class="text-center mt-5 mb-3"><%= t'.title' %></h1>
    <div class="text-center">
      <%= image_tag 'shinbun_obaasan.png', size: '200x200' %>
      <p class="small mb-2">会話のネタを探すおばあさん(イラストや)</p>
    </div>
    <%= form_with model: @topic, local: true do |f| %>
      <%= render 'shared/error_message', object: @topic %>
        <div class="form-group">
          <%= f.label :user_name, Topic.human_attribute_name(:user_name)  %>
          <%= f.text_field :user_name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :title, Topic.human_attribute_name(:title)  %>
          <%= f.text_area :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit (t'defaults.register') , class: 'btn btn-warning text-light' %>
        </div>
    <% end %>
</div>